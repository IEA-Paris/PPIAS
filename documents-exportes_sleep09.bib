	keywords = {Adult, consciousness, dream, Dreams, Electroencephalography, Female, high-density EEG, Humans, Male, Middle Aged, Polysomnography, sleep, Sleep Stages, Sleep, Slow-Wave, slow wave, Young Adult},
	pages = {9175--9185},
