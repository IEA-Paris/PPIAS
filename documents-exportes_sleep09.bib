	pmcid = {PMC5462120},
	keywords = {Adult, Aged, Cerebral Cortex, Dreams, Electroencephalography, Female, Humans, Male, Mental Recall, Middle Aged, Polysomnography, Sleep Stages, Young Adult},
	pages = {872--878},
