	type = {{SSRN} {Scholarly} {Paper}},
	title = {Effectiveness of {Covid}-19 {Vaccination} {Against} {Risk} of {Symptomatic} {Infection}, {Hospitalization}, and {Death} {Up} to 9 {Months}: {A} {Swedish} {Total}-{Population} {Cohort} {Study}},
