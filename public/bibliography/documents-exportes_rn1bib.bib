	keywords = {COVID-19, coronavirus, unemployment, gig economy, taxation, banking, business, corporate social responsibility, employment insurance, finance, financial crisis, GDP, government, health crisis, interest rate, layoff, lending, private sector, public health, public law, regulation, stimulus, virus},
	pages = {40 p.},
	file = {Full Text PDF:C\:\\Users\\gmarmin\\Zotero\\storage\\6RTT8HTG\\Lord et Saad - 2020 - Tackling the COVID-19 Pandemic.pdf:application/pdf},
